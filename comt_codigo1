// Codigo n√∫mero 1
#include <iostream>

using namespace std;

int main() //esta es la funsion principal
{
    int i = 10; //se asigna valor  a la  variable i de tipo entero. 
    float a = 1000.0;// se asigna valor a la variable a de tipo flotante
    
    while(i > 0)
    {       
        i /= 2;
        a /= 10;
    }
    
    cout<<"El valor final de la variable 'a' es: "<<a<<endl;
    return 0;
}

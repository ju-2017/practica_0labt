#include <iostream>

using namespace std;

int main() // funcion principal 
{
    for(int i = 0; i < 4; ++i)// esta linea tiene el iterador  la condicion que se debe cumplir y que el i se aumente de uno en uno 
    {
        switch(i) // se evalua la expresion i , la cual en lo siguientes casos se verifica si se cumple.
        {
            case 0: cout<<"0"; // primer caso se imprime 0 si la variable vale 0
            case 1: cout<<"1"; continue;
            case 2: cout<<"2"; break;
            default: cout<<"D"; break;
        }
        
        cout<<"*";
    }
    return 0;
}

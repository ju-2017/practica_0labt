#include <iostream>

using namespace std;

int main() // funcion principal 
{
    for(int i = 0; i < 4; ++i)// esta linea tiene el iterador  la condicion que se debe cumplir y que el i se aumente de uno en uno 
    {
        switch(i) // se evalua la expresion i , la cual en lo siguientes casos se verifica si se cumple.
        {
            case 0: cout<<"0"; // primer caso se imprime 0 si la variable vale 0
            case 1: cout<<"1"; continue;//Continue nos da la instrucion de romper una iteracion en el ciclo y condicion, y continua con la siguente iteracion
            case 2: cout<<"2"; break;//  se cumple el la condicion  y  el break cierra el ciclo 
            default: cout<<"D"; break;// default  instrucion  por defecto se imprime solo si las demas condiciones no se cumplen 
        }
        
        cout<<"*";
    }
    return 0;
}
